    margin: 1 0;
}
.lotto-num-col { height: auto; }
.lotto-num-col > * { height: auto; }
.lotto-num-label { height: auto; }
.lotto-num-input { height: auto; }

.lotto-num-col { width: auto; margin: 0; align: center middle; }

.lotto-num-label {
