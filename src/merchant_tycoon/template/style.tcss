#home-ascii .home-box {
    text-align: left;
    padding: 0;        /* keep tight to ASCII art */
    width: auto;       /* fit content width */
    min-width: 0;
}
/* Glow/pulse states for home ASCII (smooth steps) */
#home-ascii .home-box.glow-0 { color: #8f97a6; text-style: dim; }
#home-ascii .home-box.glow-1 { color: #9aa3b2; text-style: none; }
#home-ascii .home-box.glow-2 { color: #bbc0cb; text-style: none; }
#home-ascii .home-box.glow-3 { color: #cdd3df; text-style: none; }
#home-ascii .home-box.glow-4 { color: #e3e8f2; text-style: none; }
#home-ascii .home-box.glow-5 { color: #ffffff; text-style: bold; }

/* Placeholder style */
#wordle-placeholder { text-align: center; content-align: center middle; height: 1fr; text-style: bold; color: #9aa3b2; }

/* Wordle styles */
#wordle-controls { height: auto; content-align: left middle; }
#wordle-controls Input { width: 1fr; }
#wordle-controls Button { margin-left: 1; height: 3; padding: 0 1; }
#wordle-guess { margin-left: 0; }
#wordle-attempts { height: 1fr; }
.wordle-row { height: auto; align-horizontal: center; content-align: center middle; margin: 0 0 1 0; }
.wordle-box {
    background: #3a4151;
    color: #dfe5ef;
    padding: 1 0;
    margin-right: 1;
    text-align: center;
    content-align: center middle;
    width: 7;
}
.wordle-box.correct { background: #4ea59a; color: #ffffff; }
.wordle-box.present { background: #d16a66; color: #ffffff; }
.wordle-box.absent  { background: #2f3543; color: #9aa3b2; }

/* Wordle stats panel */
#wordle-stats {
    height: auto;
    margin-top: 1;
    padding: 0 1;
    background: #2f3543;  /* dimmed background */
    border: solid #3f4557;
}

/* Match bank action buttons sizing and spacing */
#lotto-buy-btn { margin-right: 1; }
